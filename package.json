{
    "name": "n8n-nodes-scrptly",
    "version": "1.0.5",
    "description": "Generates an AI video based on a text prompt and optional context images. Returns the video URL when done.",
    "license": "MIT",
    "homepage": "https://scrptly.com",
    "keywords": [
        "n8n-community-node-package",
        "n8n-node",
        "n8n",
        "scrptly",
        "ai",
        "video",
        "generation"
    ],
    "author": {
        "name": "scrptly",
        "email": "hello@scrptly.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ybouane/n8n-nodes-scrptly.git"
    },
    "scripts": {
        "build": "n8n-node build",
        "build:watch": "tsc --watch",
        "dev": "n8n-node dev",
        "lint": "n8n-node lint",
        "lint:fix": "n8n-node lint --fix",
        "release": "n8n-node release",
        "prepublishOnly": "n8n-node prerelease"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "n8nNodesApiVersion": 1,
        "strict": true,
        "credentials": [
            "dist/credentials/ScrptlyApi.credentials.js"
        ],
        "nodes": [
            "dist/nodes/Scrptly/Scrptly.node.js"
        ]
    },
    "devDependencies": {
        "@n8n/node-cli": "*",
        "eslint": "9.32.0",
        "prettier": "3.6.2",
        "release-it": "^19.0.4",
        "typescript": "5.9.2"
    },
    "peerDependencies": {
        "n8n-workflow": "*"
    }
}
